{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:best-practices"],
    "repositories": ["karelvanhecke/libvirt-operator"],
    "requireConfig": "ignored",
    "onboarding": false,
    "platformCommit": "enabled",
    "postUpdateOptions": [
        "gomodTidy"
    ],
    "customManagers":[
        {
            "customType": "regex",
            "fileMatch": "^\\.github/workflows/(?:ci|renovate)\\.yaml$",
            "depNameTemplate": "ghcr.io/renovatebot/renovate",
            "datasourceTemplate": "docker",
            "matchStrings": [
                "(?:renovate|RENOVATE)[_-](?:version|VERSION): (?<currentValue>[0-9.]+)(@(?<currentDigest>sha256:[a-f0-9]+))?"
            ]
        },
        {
            "customType": "regex",
            "fileMatch": "^Makefile$",
            "matchStrings": [
                "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>.+?)(?:versioning=(?<versioning>[a-z-]+?))?\\s+.+_VERSION=(?<currentValue>v?[0-9.]+)"
            ]
        },
        {
            "customType": "regex",
            "fileMatch": "^(?:.github/workflows/ci.yaml|go.mod)$",
            "matchStrings": ["(?:^go|go-version:) '?(?<currentValue>[0-9.]+)'?"],
            "depNameTemplate": "go",
            "datasourceTemplate": "golang-version"
        }
    ],
    "packageRules": [
        {
            "matchCurrentVersion": "!/^0/",
            "matchUpdateTypes": ["minor","patch"],
            "automerge": true
        },
        {
            "groupName": "go",
            "matchDepNames": [
                "go",
                "docker.io/golang"
            ]
        },
        {
            "matchDepNames": "go",
            "minimumReleaseAge": "1 day"
        }
    ]
}